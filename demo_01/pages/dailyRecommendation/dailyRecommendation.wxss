/* pages/dailyRecommendation/dailyRecommendation.wxss */
/* 头部区域 */
.recommendationContainer .header {
  width: 100%;
  height: 300rpx;
  position: relative;
}

.header image {
  width: 100%;
  height: 100%;
}

.header .date {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 150rpx;
  height: 150rpx;
  text-align: center;
  line-height: 150rpx;
  color: #fff;
  margin-left: -75rpx;
  margin-top: -75rpx;
}

.header .day {
  font-size: 40rpx;
}
/* 内容区域 */
.content{
  border-radius: 30rpx;
  position: relative;
  top: -20rpx; 
  background-color: #fff;
  padding: 20rpx;
}
.content .contentHeader {
  font-size: 32rpx;
}
.contentList {
  height: calc(100vh - 380rpx);
}
.content .contentHeader .multiple {
float: right;
}
.contentList .contentListItem {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  height: 80rpx;
}
.contentList .contentListItem .icon-gengduo {
  margin-left:auto;
  font-size: 36rpx;
  width: 80rpx;
  height: 80rpx;
  text-align: right;
  line-height: 80rpx;
}
.contentList .contentListItem .text {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.contentList .contentListItem .songArtist {
  max-width: 500rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  height: 40rpx;
  line-height: 40rpx;
}
.contentList .contentListItem image {
  height: 80rpx;
  width: 80rpx;
  border-radius: 8rpx;
}