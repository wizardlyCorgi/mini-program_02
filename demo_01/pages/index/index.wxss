/* pages/index/index.wxss */
/* 轮播图区域 */
.banner {
  width: 100%;
  height: 300rpx;
}
image {
  width: 100%;
  height: 100%;
}
/* 导航栏区域 */
.nav-container {
  display: flex;
}
.nav-item {
  display: flex;
  flex-direction: column;
  width: 20%;
  align-items: center;
}

.nav-item .icon {
  width: 100rpx;
  font-size: 60rpx;
  border-radius: 50%;
  height: 100rpx;
  background-color: red;
  text-align: center;
  line-height:100rpx ;
  margin: 20rpx 0;
  color: #ffffff;
}
.nav-item text {
  font-size: 20rpx;
}