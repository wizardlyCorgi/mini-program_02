/* pages/index/index.wxss */
/* 轮播图区域 */
.banner {
  width: 100%;
  height: 300rpx;
}
image {
  width: 100%;
  height: 100%;
}
/* 导航栏区域 */
.nav-container {
  display: flex;
}
.nav-item {
  display: flex;
  flex-direction: column;
  width: 20%;
  align-items: center;
}
.nav-item .icon {
  width: 100rpx;
  font-size: 60rpx;
  border-radius: 50%;
  height: 100rpx;
  background-color: red;
  text-align: center;
  line-height:100rpx ;
  margin: 20rpx 0;
  color: #ffffff;
}
.nav-item text {
  font-size: 20rpx;
}
/* 推荐区域 */
.recommend {
  padding: 20rpx;
}
.recommend .headline {
  color: #ccc;
}
.recommend .title {
  display: flex;
  justify-content: space-between;
  margin: 10rpx 0;
}
.title-btn {
  display: block;
  width: 160rpx;
  height: 50rpx;
  border-radius: 30rpx;
  border: 1rpx solid black;
  text-align: center;
  line-height: 50rpx;
}
.recommend-items {
  display: flex;
}
.recommend-items  .recommend-item  {
  width: 200rpx;
  margin-right: 10rpx;
}
.recommend-items  .recommend-item image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
}
.recommend-item text {
  /* 多行文本溢出 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}