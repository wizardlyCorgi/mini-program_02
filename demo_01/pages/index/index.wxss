/* 轮播图区域 */
.banner {
  width: 100%;
  height: 300rpx;
}

image {
  width: 100%;
  height: 100%;
}

/* 导航栏区域 */
.nav-container {
  display: flex;
}

.nav-item {
  display: flex;
  flex-direction: column;
  width: 20%;
  align-items: center;
}

.nav-item .icon {
  width: 100rpx;
  font-size: 60rpx;
  border-radius: 50%;
  height: 100rpx;
  background-color: #CC0000;
  text-align: center;
  line-height: 100rpx;
  margin: 20rpx 0;
  color: #ffffff;
}

.nav-item text {
  font-size: 20rpx;
}

/* 推荐区域 */
.recommend {
  padding: 20rpx;
}

.recommend-items {
  display: flex;
  /* 需要指定高度,滚动组件的bug会依然按照没有弹性的时候的高度计算 */
  height: 280rpx;
}

.recommend-items .recommend-item {
  width: 200rpx;
  margin-right: 10rpx;
}

.recommend-items .recommend-item image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
}

.recommend-item text {
  /* 多行文本溢出 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

/* 热门榜单 */
.top-list {
  padding: 20rpx;
}
.topListSwiper {
  height: 420rpx;
  /* width: 96%; */
}
.topListSwiper .topListSwiperItem {
  background-color: #fbfbfb;
  width: 96%;
}
.topListSwiperItem .title {
  margin-top: 10rpx;
}
.topListSwiperItem .music {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  border-radius: 6rpx;
}

.topListSwiperItem .music image {
  width: 100rpx;
  height: 100rpx;
}

.topListSwiperItem .music .count {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}

 .music .musicName {
  max-width: 400rpx;
  display: inline-block;
  height: 100rpx;
  line-height: 100rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: rgb(20, 17, 17);
}