/* pages/songsDetail/songsDetail.wxss */
.songsDetailContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: rgb(0, 0, 0, .5);
  height: 100%;
}
.artist {
  margin-top: 10rpx;
}
.circle {
  z-index: 100;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #fff;
  margin-top: 10rpx;
}

.needle {
  z-index: 99;
  position: relative;
  width: 192rpx;
  height: 274rpx;
  top: -30rpx;
  left: 60rpx;
  transform-origin: 40rpx 0;
  transform: rotate(-20deg);
  transition: transform 1s;
}
.needleTrans {
  transform: rotate(0);
}
.discContainer {
  position: relative;
  top: -170rpx;
  width: 598rpx;
  height: 598rpx;
}
.disc {
  width: 598rpx;
  height: 598rpx;
}
.musicImg {
  width: 370rpx;
  height: 370rpx;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
 border-radius: 50%;
}